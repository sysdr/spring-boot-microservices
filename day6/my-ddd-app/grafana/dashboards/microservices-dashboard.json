{
  "dashboard": {
    "title": "Microservices Metrics Dashboard",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests Total",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "JVM Memory Used",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(jvm_memory_used_bytes) by (service, area)",
            "legendFormat": "{{service}} - {{area}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Service Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"customer-service|order-service\"}",
            "legendFormat": "{{job}}"
          }
        ]
      }
    ]
  }
}
